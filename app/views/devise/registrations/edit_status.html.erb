<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
  <div>
    User
    <li><%= @user.username %></li>
    <li><%= @user.email %></li>
    <%= select_tag 'Status', options_for_select(User.statuses, @user.status) %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.hidden_field :username, value: @user.username %>
    <%= f.hidden_field :email, value: @user.email %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
