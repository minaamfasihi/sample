<h1>Campaigns</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <th>Title</th>
        <th>Tag</th>
        <th>Estimated Duration</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td><%= campaign.title %></td>
        <td><%= campaign.tag %></td>
        <td><%= campaign.estimated_duration %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Create Todo List', new_todo_list_path(campaign_id: campaign.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

